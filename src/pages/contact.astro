import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="w-[100vw]  flex align-center justify-center ">
    <form class="flex flex-col mt-3 pt-[100px] p-4 w-[400px] " action="https://formspree.io/f/mldjywad" method="POST">
      <div>
        <label class="flex flex-col ">
          Name:
          <input class="border rounded-md  mt-2" type="email" name="email" />
        </label>
        <label class="flex flex-col mt-2"> 
          Surname :
          <input class="border rounded-md  mt-2" type="email" name="email" />
        </label>
      </div>
      <label class="flex flex-col mt-2">
        Email:
        <input class="border rounded-md  mt-2" type="email" name="email" />
      </label>
      <label class="flex flex-col mt-2">
        Your message:
        <textarea class="border rounded-md  mt-2 " name="message"></textarea>
      </label>
      <!-- your other form fields go here -->
       <div class="flex align-center justify-center">
        <button class="w-[150px] mt-[35px] bg-brand-yellow hover:bg-black hover:text-brand-yellow text-black font-semibold py-3 px-6 rounded-default
        transition delay-150 duration-300 ease-in-out hover:-translate-y-1 hover:scale-110 hover:bg-black-500 ..." type="submit">Send</button>
       </div>
     
    </form>
  </div>
</BaseLayout>
